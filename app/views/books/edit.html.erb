<% if flash[:notice] %>
<p id="notice">
<%= flash[:notice] %>
</p>
<% end %>

<h1>編集画面</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %> errors unable to save edits.
<ul>
 <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
 <% end %>
</ul>
<% end %>

<%= form_with model:@book, url: book_path(@book.id), method: :put do |f| %>

<h4>本のタイトル</h4>
<%= f.text_field :title %>

<h4>感想</h4>
<%= f.text_area :body %>

<%= f.submit '保存' %>

<% end %>

<%= link_to "詳細", book_path(@book) %>
<%= link_to "戻る", :back %>

