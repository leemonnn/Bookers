<h1>投稿一覧</h1>
  <table>
    <thead>
      <tr>
       <th>本のタイトル</th>
       <th>感想</th>
      </tr>
    </thead>
    <% @books. each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td class="book-show">
        <%= link_to "詳細", book_path(book) %>
        </td>
        <td class="book-edit">
        <%= link_to "編集", edit_book_path(book) %>
        </td>
        <td class="book-destroy">
        <%= link_to "削除", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>


<h2>新規投稿</h2>
<% if @book.errors.any? %>
   <%= @book.errors.count %> errors unable to save.
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
     </ul>
  <% end %>
　<%= form_with model:@book, url: '/books', method: :post do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>



